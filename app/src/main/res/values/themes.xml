<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
        <item name="colorPrimary">@color/material_grey_primary</item>
        <item name="colorPrimaryDark">@color/material_grey_dark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/material_grey_primary
        </item>
        <item name="colorAccent">@color/material_primary</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/material_primary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/md_grey_600</item>
        <item name="android:textColorHint">@color/md_grey_600</item>
        <item name="toolbarTitleColor">@android:color/black</item>
        <item name="android:textSize">?attr/text_size_light</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:colorBackground">@color/material_grey_primary</item>
        <item name="android:windowBackground">@color/material_grey_primary</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:listDivider">@color/grey_divider</item>
    </style>

    <style name="BaseActivityTheme.NoActionBar" parent="BaseActivityTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="RootActivityTheme" parent="BaseActivityTheme.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="FontStyle" />

    <style name="FontStyle.Small">
        <item name="text_size_nano">10sp</item>
        <item name="text_size_ultralight">10sp</item>
        <item name="text_size_light">12sp</item>
        <item name="text_size_regular">14sp</item>
        <item name="text_size_medium">16sp</item>
        <item name="text_size_bold">19sp</item>
    </style>

    <style name="FontStyle.Normal">
        <item name="text_size_nano">10sp</item>
        <item name="text_size_ultralight">12sp</item>
        <item name="text_size_light">14sp</item>
        <item name="text_size_regular">16sp</item>
        <item name="text_size_medium">18sp</item>
        <item name="text_size_bold">20sp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="text_size_nano">12sp</item>
        <item name="text_size_ultralight">14sp</item>
        <item name="text_size_light">16sp</item>
        <item name="text_size_regular">18sp</item>
        <item name="text_size_medium">20sp</item>
        <item name="text_size_bold">21sp</item>
    </style>

    <style name="FontStyle.XLarge">
        <item name="text_size_nano">14sp</item>
        <item name="text_size_ultralight">16sp</item>
        <item name="text_size_light">18sp</item>
        <item name="text_size_regular">20sp</item>
        <item name="text_size_medium">22sp</item>
        <item name="text_size_bold">22sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_bg</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/md_black_1000</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:topRightRadius">8dp</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
    </style>
</resources>